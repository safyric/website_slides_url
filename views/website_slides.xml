<?xml version="1.0" ?>
<odoo>
<data>
    <template id="channels_revised" inherit_id="website_slides.channels">
        <xpath expr="//div/a[@t-attf-href='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
        <xpath expr="//h3/a[@t-attf-href='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
    </template>
    
    <template id="home_revised" inherit_id="website_slides.home">
        <xpath expr="//div/a[@t-attf-href='/slides/slide/#{slug(channel.promoted_slide_id)}']" position="attributes">
            <attribute name="t-attf-href">/resources/resource/#{slug(channel.promoted_slide_id)}</attribute>
        </xpath>
        <xpath expr="//h3/a[@t-attf-href='/slides/slide/#{slug(channel.promoted_slide_id)}']" position="attributes">
            <attribute name="t-attf-href">/resources/resource/#{slug(channel.promoted_slide_id)}</attribute>
        </xpath>
    </template>
    
    <template id="slides_channel_header_revised" inherit_id="website_slides.slides_channel_header">
        <xpath expr="//h3/a[@t-attf-href='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
        <xpath expr="//t/a[@t-esc='category.name']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
        <xpath expr="//form[@t-attf-action='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-action">/resources/#{slug(channel)}</attribute>
        </xpath>
        <xpath expr="//li[1]/a" posotion="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}#{category and &apos;/category/&apos; + slug(category) or &apos;&apos;}</attribute>
        </xpath>
        <xpath expr="//li[2]/a" posotion="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}#{category and &apos;/category/&apos; + slug(category) or &apos;&apos;}/presentation</attribute>
        </xpath>
        <xpath expr="//li[3]/a" posotion="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}#{category and &apos;/category/&apos; + slug(category) or &apos;&apos;}/video</attribute>
        </xpath>
        <xpath expr="//li[4]/a" posotion="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}#{category and &apos;/category/&apos; + slug(category) or &apos;&apos;}/document</attribute>
        </xpath>
        <xpath expr="//li[5]/a" posotion="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}#{category and &apos;/category/&apos; + slug(category) or &apos;}/infographic</attribute>
        </xpath>
    </template>
</data>
</odoo>
