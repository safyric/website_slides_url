<?xml version="1.0" ?>
<odoo>
<data>
    <template id="channels_revised" inherit_id="website_slides.channels">
        <xpath expr="//div/a[@t-attf-href='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
        <xpath expr="//h3/a[@t-attf-href='/slides/#{slug(channel)}']" position="attributes">
            <attribute name="t-attf-href">/resources/#{slug(channel)}</attribute>
        </xpath>
    </template>
    
    <template id="home_revised" inherit_id="website_slides.home">
        <xpath expr="//div/a[@t-attf-href='/slides/slide/#{slug(channel.promoted_slide_id)'}" position="attributes">
            <attribute name="t-attf-href">/resources/resource/#{slug(channel.promoted_slide_id)}</attribute>
        </xpath>
        <xpath expr="//h3/a[@t-attf-href='/slides/slide/#{slug(channel.promoted_slide_id)}']" position="attributes">
            <attribute name="t-attf-href">/resources/resource/#{slug(channel.promoted_slide_id)}</attribute>
        </xpath>
    </template>
</data>
</odoo>
